<div class="container p-4">
<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/asignaturas/edit/{{asignatura.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Nombre" value="{{asignatura.title}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="profesor" class="form-control" placeholder="Profesor" value="{{asignatura.profesor}}">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control" placeholder="Description">{{asignatura.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>